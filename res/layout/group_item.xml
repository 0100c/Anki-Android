<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent" 
	android:orientation="vertical">

	<CheckBox 
		android:id="@+id/group_item_check"
		android:layout_alignParentLeft="true"
		android:layout_width="wrap_content"
		android:layout_centerVertical="true"
		android:text=""
		android:layout_height="wrap_content"/>
	<TextView
		android:id="@+id/group_item_name" 
		android:layout_toRightOf="@+id/group_item_check"
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:layout_centerVertical="true"
		android:paddingLeft="8dip"
		android:textColor="#ffffff"/>
	<TextView
		android:id="@+id/group_item_conf" 
		android:layout_toRightOf="@+id/group_item_name"
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:gravity="center_horizontal"
		android:text="Conf"
		android:layout_centerVertical="true"
		android:paddingLeft="8dip"
		android:paddingRight="8dip"
		android:visibility="invisible"
		android:textColor="#ffffff"/>
	<TextView 
		android:id="@+id/group_item_all"
		android:layout_toLeftOf="@+id/group_item_due"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:paddingLeft="9dp"
		android:textColor="#0000ff" />
	<TextView 
		android:id="@+id/group_item_due"
		android:layout_toLeftOf="@+id/group_item_new"
		android:layout_alignTop="@+id/red_number"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:paddingLeft="8dp"
		android:textColor="#ff0000" />
	<TextView
		android:id="@+id/group_item_new"
		android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/red_number"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:textColor="#ffffff" />
</RelativeLayout>
