<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/FactAdderScroll"
	android:padding="5dp">
	<LinearLayout android:id="@+id/FactAdderLayout"
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		   	 
      	<LinearLayout
      	android:id="@+id/FactAdderSelectModelLayout"
      	android:layout_width="fill_parent"
      	android:layout_height="wrap_content">
	       	<Button
	style="?android:attr/buttonStyleSmall"	        	android:id="@+id/FactAdderModelButton"
  		       	android:layout_height="fill_parent"
   		      	android:layout_width="0dip"
    		    android:layout_weight="1"
      		   	android:layout_gravity="center"
				android:gravity="center"/>
        	<Button
	        	android:id="@+id/FactAdderCardModelButton"
	style="?android:attr/buttonStyleSmall"
	  		       	android:layout_height="fill_parent"
   		      	android:layout_width="0dip"
    		    android:layout_weight="1"
      		   	android:layout_gravity="center"
				android:gravity="center"/>
      	</LinearLayout>
		
        <LinearLayout
        android:id="@+id/FactAdderEditFieldsLayout"
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
        </LinearLayout>
 	    <LinearLayout
 	    android:layout_marginTop="5dp"
   		android:id="@+id/FactAdderButtons"
  		android:layout_height="wrap_content" 
       	android:layout_width="fill_parent"
	  	android:orientation="horizontal"
	  	android:layout_gravity="right" >

			<Button android:layout_width="0dip"
         		android:layout_weight="2"
				android:layout_height="fill_parent" 
				android:id="@+id/FactAdderTagButton"
				style="?android:attr/buttonStyleSmall"
				android:text="Tags:"
				android:layout_gravity="center"
				android:gravity="left|center_vertical"/>
			<Button android:layout_width="0dip"
				android:layout_height="fill_parent" 
				android:id="@+id/FactAdderSwapButton"
				style="?android:attr/buttonStyleSmall"
				android:layout_gravity="center"
         		android:layout_weight="1"
         		android:text="@string/fact_adder_swap"
         		android:visibility="gone"
				android:gravity="center"/>
        </LinearLayout>
 	    <LinearLayout
   		android:id="@+id/FactAdderButtons"
  		android:layout_height="wrap_content" 
       	android:layout_width="fill_parent"
	  	android:orientation="horizontal"
	  	android:layout_marginTop="3dp"
	  	android:layout_gravity="right" >
        <Button
        	android:id="@+id/FactAdderAddButton"
         	android:layout_height="fill_parent"
         	android:layout_width="0dip"
         	android:layout_weight="1"
         	android:layout_gravity="center"
	style="?android:attr/buttonStyleSmall"
			android:gravity="center"
         	android:text="@string/add"/>
		<Button
         	android:id="@+id/FactAdderCloseButton"
         	android:layout_height="fill_parent"
         	android:layout_width="0dip"
         	android:layout_weight="1"
         	android:layout_gravity="center"
	style="?android:attr/buttonStyleSmall"
			android:gravity="center"
         	android:text="@string/close"/> 
      	
      	<!-- TODO must be dynamic, for each field -->
      			<Button
         	android:id="@+id/FactAdderAddMediaButton"
         	android:layout_height="fill_parent"
         	android:layout_width="0dip"
         	android:layout_weight="1"
         	android:layout_gravity="center"
			android:gravity="center"
         	android:text="add media"/> 
      	</LinearLayout>
	</LinearLayout>
</ScrollView>