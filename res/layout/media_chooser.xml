<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/MediaChooserScroll"
	android:padding="10dp">
	<LinearLayout android:id="@+id/PictureBrowserLayout"
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:id="@+id/SelectPictureButton"
			android:text="Select a picture stored on the phone"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:gravity="center"
			android:layout_weight="1"/>
		<Button android:id="@+id/TakePictureButton"
			android:text="Take a picture with the camera"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:gravity="center"
			android:layout_weight="1"/>
	</LinearLayout>
</ScrollView>